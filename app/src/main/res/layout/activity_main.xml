<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go TO Screen2"
        android:id="@+id/btn1">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go TO Screen3"
        android:id="@+id/btnmenu">
    </Button>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/switch_text"
        android:layout_marginTop="10dp"
        android:id="@+id/switchbtn">
    </Switch>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainCheckbox"
        android:text="Are You Agree"
        android:textSize="16sp"
        android:textColor="@color/black">
    </CheckBox>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainCheckbox2"
        android:text="Are You Agree"
        android:textSize="16sp"
        android:textColor="@color/black">
    </CheckBox>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter Any Value"
        android:id="@+id/etMain">
    </EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEdit"
        android:text="Submmit">
    </Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Your Final Result"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:id="@+id/textViewMain">
    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/whatsappbutton"
        android:text="WhatsApp Button"
        android:layout_marginTop="10dp">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go TO Screen4"
        android:id="@+id/btn4">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go TO Screenbottom Navigation"
        android:id="@+id/btn5">
    </Button>


</LinearLayout>